# Environment variables for apps/api backend

# Server
NODE_ENV=development
PORT=4000

# Database (for Prisma)
# Constructed from .env.example
DATABASE_URL="postgresql://agro_user:supersecretpassword@localhost:5432/agrobridge"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT RS256 Keys
# These files must exist in the apps/api/ directory
JWT_PUBLIC_KEY_PATH="jwtRS256.key.pub"
JWT_PRIVATE_KEY_PATH="jwtRS256.key"

# JWT TTLs
JWT_ACCESS_TOKEN_TTL="15m"
JWT_REFRESH_TOKEN_TTL="7d"

# CORS
FRONTEND_URL="http://localhost:5173"
JWT_SECRET=agrobridge_super_secret_key_2024_development_only_change_in_production
JWT_REFRESH_SECRET=agrobridge_refresh_token_secret_2024_dev_change_later
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

