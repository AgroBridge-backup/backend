# ══════════════════════════════════════════════════════════════════════════════
# KUBERNETES SECRETS - TEMPLATE
# ══════════════════════════════════════════════════════════════════════════════
# WARNING: DO NOT COMMIT REAL SECRETS TO VERSION CONTROL!
#
# This is a template file. Create a copy named 'secret.yaml' and fill in
# the actual values for your environment.
#
# For production, use:
#   - External Secrets Operator (AWS Secrets Manager, HashiCorp Vault)
#   - Sealed Secrets
#   - SOPS with KMS
#
# To create secrets from this template:
#   1. Copy this file: cp secret.yaml.example secret.yaml
#   2. Replace CHANGE_ME values with real secrets
#   3. Apply: kubectl apply -f secret.yaml
#
# To base64 encode values:
#   echo -n "your-secret" | base64
# ══════════════════════════════════════════════════════════════════════════════
apiVersion: v1
kind: Secret
metadata:
  name: agrobridge-secrets
  namespace: agrobridge
  labels:
    app: agrobridge-api
    app.kubernetes.io/name: agrobridge-api
    app.kubernetes.io/component: secrets
type: Opaque
stringData:
  # ────────────────────────────────────────────────────────────────────────────
  # Database Secrets
  # ────────────────────────────────────────────────────────────────────────────
  DATABASE_URL: "postgresql://user:CHANGE_ME@postgres-service:5432/agrobridge_prod?schema=public"
  POSTGRES_USER: "agrobridge"
  POSTGRES_PASSWORD: "CHANGE_ME_STRONG_PASSWORD"

  # ────────────────────────────────────────────────────────────────────────────
  # Redis Secrets
  # ────────────────────────────────────────────────────────────────────────────
  REDIS_PASSWORD: "CHANGE_ME_REDIS_PASSWORD"

  # ────────────────────────────────────────────────────────────────────────────
  # JWT Secrets (generate with: openssl rand -base64 64)
  # ────────────────────────────────────────────────────────────────────────────
  JWT_ACCESS_SECRET: "CHANGE_ME_64_CHARS_LONG_ACCESS_SECRET_USE_OPENSSL_RAND"
  JWT_REFRESH_SECRET: "CHANGE_ME_64_CHARS_LONG_REFRESH_SECRET_USE_OPENSSL_RAND"

  # ────────────────────────────────────────────────────────────────────────────
  # Encryption Key (generate with: openssl rand -base64 32)
  # ────────────────────────────────────────────────────────────────────────────
  ENCRYPTION_KEY: "CHANGE_ME_32_CHARS_ENCRYPTION_KEY"

  # ────────────────────────────────────────────────────────────────────────────
  # AWS Credentials
  # ────────────────────────────────────────────────────────────────────────────
  AWS_ACCESS_KEY_ID: "CHANGE_ME_AWS_ACCESS_KEY"
  AWS_SECRET_ACCESS_KEY: "CHANGE_ME_AWS_SECRET_KEY"

  # ────────────────────────────────────────────────────────────────────────────
  # Stripe Payment Processing
  # ────────────────────────────────────────────────────────────────────────────
  STRIPE_SECRET_KEY: "sk_live_CHANGE_ME"
  STRIPE_WEBHOOK_SECRET: "whsec_CHANGE_ME"

  # ────────────────────────────────────────────────────────────────────────────
  # SendGrid Email Service
  # ────────────────────────────────────────────────────────────────────────────
  SENDGRID_API_KEY: "SG.CHANGE_ME"

  # ────────────────────────────────────────────────────────────────────────────
  # Twilio SMS Service
  # ────────────────────────────────────────────────────────────────────────────
  TWILIO_ACCOUNT_SID: "CHANGE_ME"
  TWILIO_AUTH_TOKEN: "CHANGE_ME"

  # ────────────────────────────────────────────────────────────────────────────
  # OAuth Providers
  # ────────────────────────────────────────────────────────────────────────────
  GOOGLE_CLIENT_ID: "CHANGE_ME.apps.googleusercontent.com"
  GOOGLE_CLIENT_SECRET: "CHANGE_ME"
  GITHUB_CLIENT_ID: "CHANGE_ME"
  GITHUB_CLIENT_SECRET: "CHANGE_ME"
