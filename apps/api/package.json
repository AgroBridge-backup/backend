{
  "name": "@agrobridge/api",
  "version": "2.0.0",
  "description": "AgroBridge Backend API - Enterprise RESTful API with Blockchain Integration",
  "author": {
    "name": "Alejandro Navarro Ayala",
    "email": "alejandro@agrobridge.com",
    "role": "CEO & Senior Developer"
  },
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "npx nodemon --watch 'src/**/*.ts' --exec 'tsx src/server.ts'",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "workers": "tsx src/infrastructure/notifications/workers/notification-worker.ts",
    "workers:prod": "node dist/infrastructure/notifications/workers/notification-worker.js",
    "test": "npx vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:integration:ws": "vitest run tests/integration/websocket.test.ts",
    "test:integration:flows": "vitest run tests/integration/critical-flows.test.ts",
    "test:e2e": "npm run generate:keys && npx prisma db push --force-reset --accept-data-loss && vitest run tests/e2e",
    "test:notifications": "vitest run tests/notifications",
    "test:benchmarks": "vitest run tests/performance/benchmarks.test.ts --reporter=verbose",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=verbose",
    "test:load": "./tests/load/k6/run-all.sh",
    "test:load:smoke": "k6 run tests/load/k6/scenarios/smoke.test.js",
    "test:load:full": "k6 run tests/load/k6/scenarios/load.test.js",
    "test:load:stress": "k6 run tests/load/k6/scenarios/stress.test.js",
    "test:load:spike": "k6 run tests/load/k6/scenarios/spike.test.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:benchmarks",
    "test:blockchain": "RUN_TESTNET_TESTS=true vitest run tests/integration/blockchain/testnet-validation.test.ts --reporter=verbose",
    "test:db:reset": "prisma migrate reset --force --skip-seed",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx src/infrastructure/database/seed.ts",
    "prisma:seed:prod": "node dist/infrastructure/database/seed.js",
    "db:push": "prisma db push --force-reset --accept-data-loss",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "generate:keys": "tsx scripts/generate-keys.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepare:prod": "npm ci && npm run build && npm run prisma:generate"
  },
