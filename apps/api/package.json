{
  "name": "@agrobridge/api",
  "version": "2.0.0",
  "description": "AgroBridge Backend API - Enterprise RESTful API with Blockchain Integration",
  "author": {
    "name": "Alejandro Navarro Ayala",
    "email": "alejandro@agrobridge.com",
    "role": "CEO & Senior Developer"
  },
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "npx nodemon --watch 'src/**/*.ts' --exec 'tsx src/server.ts'",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "workers": "tsx src/infrastructure/notifications/workers/notification-worker.ts",
    "workers:prod": "node dist/infrastructure/notifications/workers/notification-worker.js",
    "test": "npx vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "npm run generate:keys && npx prisma db push --force-reset --accept-data-loss && vitest run tests/e2e",
    "test:notifications": "vitest run tests/notifications",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=verbose",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx src/infrastructure/database/seed.ts",
    "prisma:seed:prod": "node dist/infrastructure/database/seed.js",
    "db:push": "prisma db push --force-reset --accept-data-loss",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "generate:keys": "tsx scripts/generate-keys.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepare:prod": "npm ci && npm run build && npm run prisma:generate"
  },
  "dependencies": {
    "@bull-board/api": "^5.23.0",
    "@bull-board/express": "^5.23.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/contracts": "^5.4.0",
    "@parse/node-apn": "^6.5.0",
    "@prisma/client": "^5.9.1",
    "@sendgrid/mail": "^8.1.0",
    "@vendia/serverless-express": "^4.12.6",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "dotenv": "^16.6.1",
    "elliptic": "^6.6.1",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^12.7.0",
    "form-data": "^4.0.0",
    "handlebars": "^4.7.8",
    "hardhat": "^3.0.15",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "ipfs-http-client": "^60.0.1",
    "jsonwebtoken": "^9.0.2",
    "jws": "^4.0.1",
    "morgan": "^1.10.0",
    "prisma": "^5.9.1",
    "qrcode": "^1.5.3",
    "rate-limiter-flexible": "^4.0.1",
    "serverless-offline": "^14.4.0",
    "twilio": "^5.10.7",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "winston-datadog": "^1.1.0",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/ms": "^2.1.0",
    "@types/node": "^20.19.25",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.1",
    "eslint": "^8.56.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.0",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "prisma": {
    "schema": "src/infrastructure/database/prisma/schema.prisma",
    "seed": "tsx src/infrastructure/database/seed.ts"
  }
}
