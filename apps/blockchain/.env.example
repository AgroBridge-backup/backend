# AgroBridge Blockchain - Environment Variables
# Copy this file to .env and fill in your details.
# DO NOT COMMIT THE .env FILE TO VERSION CONTROL.

# RPC URLs (get from a provider like Alchemy or Infura)
POLYGON_RPC_URL="https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY"
MUMBAI_RPC_URL="https://polygon-mumbai.g.alchemy.com/v2/YOUR_API_KEY"

# Private Key of the deployer account. 
# For local testing, you can use one of the Hardhat default keys.
# IMPORTANT: Never commit a private key for a mainnet account.
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# PolygonScan API Key (for contract verification on the explorer)
POLYGONSCAN_API_KEY="YOUR_POLYGONSCAN_API_KEY"

# CoinMarketCap API Key (optional, for gas reporter to show USD costs)
COINMARKETCAP_API_KEY="YOUR_CMC_API_KEY"

# Set to true to enable mainnet forking for testing against real-world data
FORK_MAINNET=false
