<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include all shared preferences by default -->
    <include domain="sharedpref" path="." />

    <!-- FIXED: MEDIUM-23 - Exclude sensitive files from backup to prevent credential leaks -->
    <!-- Security-critical files that should NOT be backed up -->

    <!-- Exclude sensitive shared preference files -->
    <exclude domain="sharedpref" path="device.xml" />
    <exclude domain="sharedpref" path="keystore_prefs.xml" />
    <exclude domain="sharedpref" path="auth_tokens.xml" />
    <exclude domain="sharedpref" path="session_cache.xml" />

    <!-- Exclude sensitive database files -->
    <exclude domain="database" path="keystore.db" />
    <exclude domain="database" path="auth_cache.db" />
    <exclude domain="database" path="tokens.db" />

    <!-- Exclude files directory sensitive data -->
    <exclude domain="file" path="cache/auth" />
    <exclude domain="file" path="cache/tokens" />
    <exclude domain="file" path="keystore" />

    <!-- Note: Root-level files like Keychain are excluded by Android automatically -->
</full-backup-content>
